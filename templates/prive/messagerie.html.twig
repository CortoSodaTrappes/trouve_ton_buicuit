{% block main %}

    <main style='min-height:60vh;'>

    <h1 class="text-center mt-4"> Messagerie </h1>

      <form method="post" id="form_messagerie" action="" class="col-md-3 offset-md-5">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="de">De {{app.user.pseudo}} </label>
        </div>

        <div class="form-group col-md-6">
          <label for="pour">Pour destinataire </label>
        </div>

        <div class="form-group col-md-6">
          <label for="objet">Objet</label>
          <input type="text" name="objet" class="form-control" id="objet" placeholder="Objet du message">
        </div>

        <div class="form-group col-md-12">
          <label for="message">Message</label>
          <textarea class="form-control" name="message" id="message" rows="6"></textarea>
        </div>
        <button type="submit" class="btn btn-dark col-md-6">Envoyer</button>
      </div>
      </form>

    </main>
{% endblock %}

