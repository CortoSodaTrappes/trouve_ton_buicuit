{% extends 'test.html.twig' %}
{% block body %}

    <h2>{{membre.pseudo}}</h2>
    <div style="text-align:right">
        {% if app.user is not null %}
            <p>Connecté en tant que
                <strong>{{app.user.pseudo}}</strong>
                (<a href="{{path('test_logout')}}">Déconnexion</a>).</p>
        {% else %}
            <p>Utilisateur anonyme (<a href="{{path('test_login')}}">connexion</a>).</p>
        {% endif %}
    </div>
    <p>Contacter au
        {{membre.email}}</p>

    <p>Ville : {{membre.ville}}</p>
    <p>Age : {{age}}
    <p>
        <a href="{{path('test_list')}}">Liste des membres</a>
    </p>

    {% if is_granted('ROLE_USER') %}
        {% if membre.id == app.user.id %}
            <p>
                <a href="{{path('test_edit', {id: membre.id }) }}">Edit
                    {{membre.pseudo}}</a>
            </p>

            <p>
                <a href="{{path('test_edit_presentation', {id: membre.id }) }}">Edit Présentation</a>
            </p>


            <p>
                <a href="{{path('test_delete', {id: membre.id }) }}">Supprimer
                    {{membre.pseudo}}</a>
            </p>
        {% else %}
            <p>
                <a href="{{path('test_newmessage', {id: membre.id }) }}">Ecrire à
                    {{membre.pseudo}}</a>
            </p>
        {% endif %}
    {% endif %}

    {% if membre.mainimage is not null %}
        <img src="/uploads/images/{{membre.mainimage}}" width="200px">
    {% endif %}
        <h3>Ma présentation</h3>
        <p>Je suis : {{membre.jesuis}}</p>
        <p>Trait de caractère : {{membre.TraitCaractere}}</p>
        <p>Type de relation : {{membre.TypeRelation}}</p>
        <p>Je cherche : {{membre.jeveux}}</p>
        <p>Taille : {{membre.taille}}</p>
        <p>Couleur des yeux : {{membre.yeux}}</p>
        <p>Couleur des cheveux : {{membre.cheveux}}</p>
        <p>Silhouette : {{membre.silhouette}}</p>
        <p>Fume : {{membre.fume}}</p>
        <p>Mange : {{membre.mange}}</p>

{% endblock %}