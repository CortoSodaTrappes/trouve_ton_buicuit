{% extends 'admin.html.twig' %} {% block container_fluid %}


<h1 class="text-center mt-3 font-weight-light">Send Mailing</h1>

<form method="post" class="col-md-6 offset-md-3">

    <div class="form-group">
        <label for="exampleFormControlSelect2">Select User</label>
        <select class="form-control" id="exampleFormControlSelect2" name="exampleFormControlSelect2">
        <option value="all">All users</option>
        {% for membre in membres %}
        <option value="{{ membre.email}}">{{membre.email}}</option>
        {% endfor %}
    </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Write mail</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

    <input type="submit" value="send" name="send" class="btn btn-dark col-md-12 mb-4"></button>
    
</form>

{% endblock %}