{% extends 'admin.html.twig' %}
{% block container_fluid %}

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Users Management</a>
        </li>

    </ol>

    <!-- Icon Cards-->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="far fa-eye"></i>
                    </div>
                    <div class="mr-5">Permissions</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('permissions') }}">Manage permissions</a>
                <span class="float-right"></span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="mr-5">Moderate users</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="{{ path('moderation') }}">Manage User Moderation</a>
            <span class="float-right"></span>
        </a>
    </div>
</div>
<div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-success o-hidden h-100">
        <div class="card-body">
            <div class="card-body-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="mr-5">send mailing</div>
        </div>
        <a class="card-footer text-white clearfix small z-1" href="{{ path('send_mailing') }}">Manage mailing</a>
        <span class="float-right"></span>
    </a>
</div>
</div>
<div class="col-xl-3 col-sm-6 mb-3">
<div class="card text-white bg-danger o-hidden h-100">
    <div class="card-body">
        <div class="card-body-icon">
            <i class="fas fa-comments"></i>
        </div>
        <div class="mr-5">private messages</div>
    </div>
    <a class="card-footer text-white clearfix small z-1" href="{{ path('send_mailing') }}">Manage private messages</a>
    <span class="float-right"></span>
</a>
</div>
</div>
</div>

<!-- DataTables Example -->
<div class="card mb-3">
<div class="card-header">
<i class="fas fa-table"></i>
Data users</div>
<div class="card-body">
<div class="table-responsive">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Pseudo</th>
            <th>Mail</th>
            <th>First connexion</th>
            <th>Last connexion</th>
        </tr>
    </thead>

    <tbody></tbody>
</table>
</div>
</div>
<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

</div>
<!-- /.container-fluid -->

{% endblock %}